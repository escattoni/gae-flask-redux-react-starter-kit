{
    "parser": "babel-eslint",

    "extends": [
        "eslint:recommended",
        "standard",
        "standard-react"
    ],

    "plugins": [
        "react",
        "babel"
    ],

    "ecmaFeatures": {
        "modules": true,
        "jsx": true,
        "experimentalObjectRestSpread": true
    },

    "env": {
        "es6": true,
        "browser": true,
        "mocha": true,
        "node": true
    },

    "globals": {
        "__DEV__": false,
        "__TEST__": false,
        "expect": false,
        "chai": false,
        "sinon": false
    },

    "rules": {
        "comma-dangle": 0,
        "indent": [ 0, 4 ],
        "jsx-quotes": [ 2, "prefer-double" ],
        "key-spacing": 0,
        "no-multiple-empty-lines": 0,
        "no-multi-spaces": 0,
        "react/jsx-boolean-value": 0,
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "react/react-in-jsx-scope": 2,
        "react/prop-types": 2,
        "react/jsx-no-duplicate-props": 2,
        "react/jsx-no-undef": 2,
        "react/no-direct-mutation-state": 2,
        "react/no-unknown-property": 2,
        "space-in-parens": 0
    }
}

{
    "parser": "babel-eslint",

    "extends": [
        "eslint:recommended",
        "standard",
        "standard-react"
    ],

    "plugins": [
        "react"
    ],

    "ecmaFeatures": {
        "modules": true,
        "jsx": true,
        "experimentalObjectRestSpread": true
    },

    "env": {
        "es6": true,
        "browser": true,
        "mocha": true,
        "node": true
    },

    "globals": {
        "__DEV__": false,
        "__TEST__": false,
        "expect": false,
        "chai": false,
        "sinon": false
    },

    "rules": {
        "comma-dangle": 0,
        "consistent-return": 2,
        "constructor-super": 2,
        "eol-last": 2,
        "eqeqeq": 2,
        "indent": [ 0, 4 ],
        "jsx-quotes": [ 2, "prefer-double" ],
        "key-spacing": 0,
        "linebreak-style": [ 2, "unix" ],
        "no-cond-assign": 2,
        "no-console": 2,
        "no-debugger": 2,
        "no-mixed-requires": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-multiple-empty-lines": [2, {"max": 2, "maxEOF": 1}],
        "no-multi-spaces": 0,
        "no-this-before-super": 2,
        "no-unused-vars": 2,
        "no-var": 2,
        "prefer-arrow-callback": 2,
        "prefer-const": 2,
        "prefer-reflect": 2,
        "prefer-template": 2,
        "quotes": [ 2, "single" ],
        "react/forbid-prop-types": 2,
        "react/jsx-boolean-value": 0,
        "react/jsx-indent": [ 2, 4 ],
        "react/jsx-key": 2,
        "react/jsx-no-bind": 2,
        "react/jsx-no-duplicate-props": 2,
        "react/jsx-no-undef": 2,
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "react/no-deprecated": 2,
        "react/no-did-mount-set-state": 2,
        "react/no-did-update-set-state": 2,
        "react/no-direct-mutation-state": 2,
        "react/no-is-mounted": 2,
        "react/no-unknown-property": 2,
        "react/prop-types": 2,
        "react/react-in-jsx-scope": 2,
        "react/wrap-multilines": 2,
        "require-yield": 2,
        "semi": [ 2, "never" ],
        "space-in-parens": 0,
        "vars-on-top": 0
    }
}
